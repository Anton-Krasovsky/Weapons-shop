<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:background="#F1EFEC"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageMP155"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/mp155" />

    <TextView
        android:id="@+id/MP155_title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/anton"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CADAE6"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/MP155_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CADAE6"
        android:fontFamily="@font/adamina"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Mp155_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA9090"
        android:gravity="end"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/adamina"
        android:text="TextView" />

    <Button
        android:id="@+id/button_MP155_text"
        android:layout_width="200dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/BackGroundWeaponButton"
        android:text="@string/full_information"
        android:textColor="@color/black" />

</LinearLayout>